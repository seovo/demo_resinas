<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="puchase_category" model="ir.ui.view">
            <field name="name">purchase.order</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='order_line']/tree/field[@name='name']" position="after">

                    <field name="ratio_kg"
                           optional="hidden" invisible="1" />
                    <field name="unit_prove" optional="hidden"  />
                    <field name="cant_prov" optional="hidden"  />
                    <field name="prec_prov" optional="hidden"  />
                </xpath>
            </field>
    </record>


    <record id="product_tempalte" model="ir.ui.view">
            <field name="name">product.template</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view" />
            <field name="arch" type="xml">
                <xpath expr="//page[@name='general_information']" position="after">
                   <page name="ratios_" string="Ratios" >
                       <field name="ratios_ids" widget="one2many" context="{'show_attribute': False}">
                          <tree string="Ratios" editable="bottom" >
                             <field name="unit_prove" />
                             <field name="ratio_kg" />

                          </tree>
                       </field>

                  </page>
                </xpath>
            </field>
    </record>


</odoo>
