<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <record id="view_alerta" model="ir.ui.view">
        <field name="name">Alert</field>
        <field name="model">alertas.resinas</field>
        <field name="arch" type="xml">
            <form string="Transfer Data To Server">
                <h2>Esta Seguro de Proseguir?</h2>
                <div>
                    <field name="mrp_production" invisible="1" />
                    <field name="msg" readonly="1" />
                </div>
                <footer>
                    <button name="confirm_continue" string="Continuar"

                            type="object" class="oe_highlight" />

                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>


</odoo>
